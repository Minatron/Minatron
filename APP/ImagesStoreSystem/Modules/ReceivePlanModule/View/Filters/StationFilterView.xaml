<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:local="clr-namespace:ReceivePlanModule.Presenters"
                    xmlns:lang="clr-namespace:LocalizationLibrary;assembly=LocalizationLibrary"
					xmlns:contr="clr-namespace:WPF.Patterns.Controls;assembly=PatternLibrary"
					xmlns:conv="clr-namespace:WPF.Patterns.Convertors;assembly=PatternLibrary"
					>
	<DataTemplate DataType="{x:Type local:StationFilterPresenter}">
		<DataTemplate.Resources>
			<ResourceDictionary>
				<ResourceDictionary.MergedDictionaries>
					<ResourceDictionary Source="pack://application:,,,/DictionaryModule;component/Views/DictionarySelectorView.xaml"/>
				</ResourceDictionary.MergedDictionaries>
			</ResourceDictionary>
		</DataTemplate.Resources>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="200"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<TextBlock Foreground="Black" Text="{Binding Name}" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center"/>
			<ContentControl Grid.Column="1" Content="{Binding StationSelector}" MinWidth="200"/>
		</Grid>
	</DataTemplate>
</ResourceDictionary>