<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:core="clr-namespace:ImagesStoreSystem.DBProvider.Core;assembly=ImagesStoreSystem.DBProvider"
					>
	<DataTemplate DataType="{x:Type core:PlanTaskStatus}">
		<Image x:Name="StatusImage" Width="16"/>
		<DataTemplate.Triggers>
			<DataTrigger Binding="{Binding}" Value="Complete">
				<Setter TargetName="StatusImage" Property="Source" Value="pack://application:,,,/ImageStoreSystem.Infrastructure;component/Icons/ok_status.png"/>
			</DataTrigger>
			<DataTrigger Binding="{Binding}" Value="Aborted">
				<Setter TargetName="StatusImage" Property="Source" Value="pack://application:,,,/ImageStoreSystem.Infrastructure;component/Icons/abort_status.png"/>
			</DataTrigger>
			<DataTrigger Binding="{Binding}" Value="Skipped">
				<Setter TargetName="StatusImage" Property="Source" Value="pack://application:,,,/ImageStoreSystem.Infrastructure;component/Icons/skeep_status.png"/>
			</DataTrigger>
		</DataTemplate.Triggers>
	</DataTemplate>
</ResourceDictionary>