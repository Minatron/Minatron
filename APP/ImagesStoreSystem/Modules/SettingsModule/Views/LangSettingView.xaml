<UserControl x:Class="SettingsModule.Views.LangSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lang="clr-namespace:LocalizationLibrary;assembly=LocalizationLibrary">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Foreground="Black" TextAlignment="Right" MinWidth="100" Margin="3" HorizontalAlignment="Right" VerticalAlignment="Center" Text="{lang:Title XPath=Modules/Lang/Lang}"/>
        <ComboBox Margin="3" Grid.Column="1" ItemsSource="{Binding Langs}" SelectedItem="{Binding CurrentLang, UpdateSourceTrigger=PropertyChanged}"/>
            
    </Grid>
</UserControl>
