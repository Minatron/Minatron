<UserControl x:Class="StorageModule.Views.LostConnectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lang="clr-namespace:LocalizationLibrary;assembly=LocalizationLibrary"
			 >
    <Grid >
		<GroupBox Header=" ">
			<Button HorizontalAlignment="Left" Margin="5" MinWidth="60" Padding="5,2,5,2" Content="{lang:Title XPath=Modules/Storage/LostConnectView/ReconnectButton}" Command="{Binding ConnectCommand}"/>
		</GroupBox>
		<TextBlock Text="{lang:Title XPath=Modules/Storage/LostConnectView/NoConnection}" FontSize="14" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,2,0,0"/>
	</Grid>
</UserControl>
